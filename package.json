{
  "name": "japanese-word-display",
  "displayName": "Japanese Word Display",
  "description": "在 VS Code 狀態列顯示日文單字，支援詳細資料和練習功能的日語學習擴展",
  "version": "0.0.7",
  "publisher": "6yuwei",
  "author": "6yuwei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vscode-japanese-extension.git"
  },
  "keywords": ["japanese", "learning", "vocabulary", "education", "language"],
  "icon": "mylogo.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "japanese-word-display.showWordDetail",
        "title": "顯示日文單字詳細資料",
        "category": "Japanese Learning"
      },
      {
        "command": "japanese-word-display.refreshWord",
        "title": "刷新日文單字",
        "category": "Japanese Learning"
      },
      {
        "command": "japanese-word-display.startQuiz",
        "title": "開始日文單字練習",
        "category": "Japanese Learning"
      },
      {
        "command": "japanese-word-display.showExamples",
        "title": "顯示例句練習",
        "category": "Japanese Learning"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Japanese Word Display",
      "properties": {
        "japanese-word-display.apiBaseUrl": {
          "type": "string",
          "default": "https://ai-tutor.6yuwei.com/api",
          "description": "後端 API 基礎 URL"
        },
        "japanese-word-display.updateInterval": {
          "type": "number",
          "default": 30,
          "description": "單字更新間隔（秒）"
        },
        "japanese-word-display.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "是否在狀態列顯示日文單字"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
